<Page x:Class="DR_TI_GIT_WPF.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DR_TI_GIT_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="Dashboard">

    <StackPanel Background="AliceBlue">
        <Label Content="Dashboard" FontSize="21px" HorizontalContentAlignment="Center" Foreground="AliceBlue" Background="MediumPurple"/>
        <Button Content="Nowa gra" Click="Button_Click" Foreground="AliceBlue" Background="MediumPurple"/>
        <ListView x:Name="lstview" Background="MediumPurple" Foreground="AliceBlue"></ListView>
        <Button Content="Załaduj" Click="LoadButton" Foreground="AliceBlue" Background="MediumPurple"/>
    </StackPanel>
</Page>
